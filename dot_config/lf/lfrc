# lf Configuration

# General options
set hidden
set icons
set icon "dir" ""
set icon "file" ""
set icon "link" ""
set icon "exe" ""
set icon "archive" ""
set icon "audio" ""
set icon "image" ""
set icon "video" ""
set icon "doc" ""
set icon "pdf" ""
set icon "conf" ""
set icon "log" ""
set icon "bak" ""
set icon "tmp" ""
set icon "default" ""
set preview
set previewer ~/.config/lf/preview.sh
set cleaner ~/.config/lf/cleaner.sh

# Keybindings
map H  prevhalf
map L  nexthalf
map J  down
map K  up
map <space> toggle
map <c-s> toggle-split
map <c-h> push :open_with_editor<CR>
map <c-l> push :open_with_default<CR>

# Custom commands
cmd open_with_editor %{{
    case $(file --mime-type -b "$f") in
        text/*) nvim "$f" ;;
        *)      lf -remote "send $id; open $f" ;;
    esac
}}

cmd open_with_default %{{
    case $(file --mime-type -b "$f") in
        text/*) nvim "$f" ;;
        image/*) sxiv "$f" ;;
        video/*) mpv "$f" ;;
        application/pdf) zathura "$f" ;;
        *)      xdg-open "$f" ;;
    esac
}}

