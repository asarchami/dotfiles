{
  "$schema": "https://opencode.ai/config.json",
  // Theme configuration
  "theme": "opencode",
  "model": "github.copilot",
  "autoupdate": true,
  // Load project-specific instructions like GitHub CLI does
  "instructions": [
    ".github/instructions/**/*.instructions.md",
    ".github/copilot-instructions.md"
  ],
  "permission": {
    "edit": "allow",
    "webfetch": "ask",
    "doom_loop": "ask",
    "external_directory": "ask",
    "bash": {
      "git push": "ask",
      "git status": "allow",
      "git diff": "allow",
      "git add": "ask",
      "git commit": "ask",
      "ls": "allow",
      "pwd": "allow",
      "*": "ask"
    }
  }
}
