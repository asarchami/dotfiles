# ----------------------------------------------------- 
# Monitor Configuration
# Managed by chezmoi - different configs per machine
# ----------------------------------------------------- 

{{- if eq .chezmoi.hostname "cachyos-desktop" }}
# PC Configuration (3 monitors: DP-1, DP-2, DP-3)
monitor=DP-1,2560x1440@59.95,7680x215,1.0
monitor=DP-1,transform,3
monitor=DP-2,2560x1440@59.95,2400x215,1.0
monitor=DP-2,transform,1
monitor=DP-3,3840x2160@144.0,3840x452,1.0

workspace=DP-3,1
workspace=DP-3,2
workspace=DP-3,3
workspace=DP-3,4
workspace=DP-3,5
workspace=DP-2,6
workspace=DP-2,7
workspace=DP-2,8
workspace=DP-1,9
workspace=DP-1,10
workspace=DP-1,11

{{- else if eq .chezmoi.hostname "cachyos-laptop" }}
# Laptop Configuration
# Monitor management is handled by kanshi for dynamic switching
# This is a fallback configuration if kanshi is not running

# Fallback: Enable laptop screen by default
monitor=eDP-1,1920x1200@120.02,0x0,1.0

# Auto-detect and configure any connected external monitors
monitor=,preferred,auto,1.0

{{- else }}
# Unknown machine - use auto-detection
monitor=,preferred,auto,1

{{- end }}
