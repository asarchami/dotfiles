# ----------------------------------------------------- 
# Monitor Configuration
# Managed by chezmoi - different configs per machine
# ----------------------------------------------------- 

{{- if eq .chezmoi.hostname "cachyos-desktop" }}
# PC Configuration (3 monitors: DP-1, DP-2, DP-3)
monitor=DP-3,3840x2160@144.0,3840x452,1.0
monitor=DP-1,2560x1440@59.95,7680x215,1.0
monitor=DP-1,transform,3
monitor=DP-2,2560x1440@59.95,2400x215,1.0
monitor=DP-2,transform,1

workspace=DP-3,1
workspace=DP-3,2
workspace=DP-3,3
workspace=DP-3,4
workspace=DP-3,5
workspace=DP-2,6
workspace=DP-2,7
workspace=DP-2,8
workspace=DP-1,9
workspace=DP-1,10
workspace=DP-1,11

{{- else if eq .chezmoi.hostname "cachyos-laptop" }}
# Laptop Configuration
# Primary config for docked setup (most common use case)
# Kanshi handles dynamic switching when monitors are hotplugged
# Super+Shift+M can manually fix monitor configuration if needed

# Docked configuration: 3 external monitors
monitor=DP-2,2560x1440@59.95,0x0,1.0,transform,1
monitor=DP-5,3840x2160@60,1440x0,1.0
monitor=DP-3,2560x1440@59.95,5280x0,1.0,transform,3

# Laptop screen - will be enabled/disabled by lid monitor service
monitor=eDP-1,disable

# Workspace assignments for docked setup
workspace=DP-5,1
workspace=DP-5,2
workspace=DP-5,3
workspace=DP-2,4
workspace=DP-2,5
workspace=DP-2,6
workspace=DP-3,7
workspace=DP-3,8
workspace=DP-3,9

{{- else }}
# Unknown machine - use auto-detection
monitor=,preferred,auto,1

{{- end }}
